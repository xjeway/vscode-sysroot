name: Build Sysroot

on:
  push:
    branches:
      - main
  pull_request:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        arch: [x86_64, aarch64, armhf]
    steps:
      - uses: actions/checkout@v3

      - name: Fetch vscode-linux-build-agent configs
        run: |
          git clone --depth=1 https://github.com/microsoft/vscode-linux-build-agent vendor/vscode-linux-build-agent

      - name: Set up QEMU
        uses: docker/setup-qemu-action@v2

      - name: Build sysroot (${{ matrix.arch }})
        run: |
          docker build \
            --build-arg ARCH=${{ matrix.arch }} \
            --build-arg CONFIG_PATH=vendor/vscode-linux-build-agent/${{ matrix.arch }}.config \
            -f Dockerfile.${{ matrix.arch }} \
            -t vscode-sysroot:${{ matrix.arch }} .

      - name: Extract sysroot
        run: |
          docker create --name temp-${{ matrix.arch }} vscode-sysroot:${{ matrix.arch }}
          docker cp temp-${{ matrix.arch }}:/src/vscode-sysroot-${{ matrix.arch }}.tgz ./dist/
          docker rm temp-${{ matrix.arch }}

      - name: Upload artifact
        uses: actions/upload-artifact@v3
        with:
          name: sysroot-${{ matrix.arch }}
          path: dist/vscode-sysroot-${{ matrix.arch }}.tgz

